<h1>Login</h1>
<%=  form_for @login do |f| %>
  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>
  <div class="form-group">
    <%= f.label :password %>  
    <%= f.password_field :password %>
  </div>
  <div class="form-actions">    
    <%= f.submit 'Login'%>
  </div>
<% end %>